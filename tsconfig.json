{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"paths": {
			"@/*": ["./resources/js/*"],
			"ziggy-js": ["./vendor/tightenco/ziggy"]
		},

		// For Vite and React and Node
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["node", "vite/client"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",

		// Default Types settings
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true

		// Some stricter flags that are not enabled by default
		// "noUnusedLocals": true
		// "noUnusedParameters": true

		// used for like process.env["NODE_ENV"] and not process.env.NODE_ENV
		// "noPropertyAccessFromIndexSignature": true
	},
	"include": ["resources/js/**/*.ts", "resources/js/**/*.tsx", "resources/js/**/*.d.ts"],
	"exclude": ["node_modules", "build", "dist"]
}
